{
  "compilerOptions": {
    // 启用增量编译
    "composite": true,
    // 指定增量编译信息文件的路径
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    // 指定 ECMAScript 的目标版本为 ES2022
    "target": "ES2022",
    // 指定要包含的库
    "lib": ["ES2023"],
    // 指定模块系统为 ESNext
    "module": "ESNext",
    // 跳过库文件的类型检查
    "skipLibCheck": true,

    /* Bundler 模式 */
    // 使用 Bundler 的模块解析策略
    "moduleResolution": "bundler",
    // 启用模块隔离
    "isolatedModules": true,
    // 强制模块检测
    "moduleDetection": "force",
    // 禁止生成输出文件
    "noEmit": false,

    /* Linting */
    // 启用所有严格类型检查选项
    "strict": true,
    // 禁止未使用的局部变量
    "noUnusedLocals": true,
    // 禁止未使用的函数参数
    "noUnusedParameters": true,
    // 禁止 switch 语句中的 fallthrough
    "noFallthroughCasesInSwitch": true,
    // 禁止未检查的副作用导入
    "noUncheckedSideEffectImports": true
  },
  // 包含的文件
  "include": ["vite.config.ts"]
}